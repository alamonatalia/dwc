---
import Container from "@scaffolding/Container.astro";
import Section from "@scaffolding/Section.astro";

---
<Section className="bg-hero w-full min-h-[100vh] h-full bg-no-repeat bg-center bg-cover overflow-hidden">
    <Container className=" relative h-full">
        <div class=" relative z-10 mx-auto pt-16 pb-8 w-full flex justify-around gap-12 ">
            <h1 class=" text-[5.5rem] leading-tight mb-20 text-[var(--brand-gray-50)] font-medium">
                Tu Idea, <br> 
                <span class=" pl-14 whitespace-nowrap"> nuestro arte...</span>
            </h1>
            <div class=" relative mt-10 max-w-sm">
                <p class="text-white uppercase text-sm font-semibold text-center tracking-wider w-full px-6 py-4 bg-black/90 border-b-2 border-white">
                    Servicios de remodelación y Handyman en Miami
                </p>
                <p class=" bg-black/70 text-xl text-[var(--brand-gray-200)] px-6 py-10 inline-block ml-auto text-center">
                    Transformamos tus espacios con soluciones a medida utilizando materiales de alta calidad.
                </p>
                <div class="w-0.5 h-[360px] bg-line-v-gradient absolute -top-16 left-0"></div>
                <div class="w-0.5 h-[360px] bg-line-v-gradient absolute -top-16 right-0"></div>
            </div>    
        </div>   

        <div class="z-10 relative mt-8">
            <div class="w-full h-0.5 bg-line-h-gradient"></div>
            <p class="p-6 text-center bg-black/40 text-white text-xl">
                Somos especialistas en: <span 
                id="dynamic-word"
                class="ftn-words pl-4 min-w-[240px] font-bold text-[var(--brand-gray-50)] inline-block">
                Armarios de Cocina
            </span>
            </p>
        </div>
            
    </Container>
    <!-- <div class="ftn-overlay"></div> -->
</Section>

<style>

    @keyframes fadeInOut {
        0%, 100% {
            opacity: 0;
            transform: translateY(10px);
        }
        30%, 60% {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .ftn-words{
        animation: fadeInOut 5s infinite
    }

</style>

<script>
  const words = ["Armarios de Cocina", "Muebles de Baño", "Herrajes para Armarios", "Fregaderos de Cocina", "Encimeras de Granido", "Mármol & Cuarzo"];
  let index = 0;

  const changeWord = () => {
    const dynamicWord = document.getElementById("dynamic-word");
    if (dynamicWord) {
        dynamicWord.classList.remove("fade");
      void dynamicWord.offsetWidth; 
      index = (index + 1) % words.length;
      dynamicWord.textContent = words[index];
      dynamicWord.classList.add("fade");
    }
  };

  setInterval(changeWord, 5000); 
</script>