---
const {
    number,
    service,
    description
} = Astro.props;
---

<li class="bg-hero min-h-80 p-8 group transition-all ease-in-out">
    <div class="relative bg-red-400 h-full">
        <p class=" opacity-0 -translate-y-4 transition-all duration-500 ease-in-out group-hover:opacity-100 group-hover:translate-y-0 ">
            {number}
        </p>
        <div class=" absolute bottom-0 left-0  ">
            <h3 class=" font-bold text-lg">
                {service}
            </h3>
            <p class=" h-0 opacity-0 text-sm transition-all duration-500 ease-in-out group-hover:h-[40px] group-hover:opacity-100">
                {description}
            </p>
        </div>
    </div>   
</li>